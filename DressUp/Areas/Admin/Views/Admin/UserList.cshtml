

@{
    ViewData["Title"] = "Users";
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Email</th>
            <th scope="col">Username</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Email</td>
                <td>@item.Username</td>
                <td>
                    <a href="/Admin/DeleteUser?id=@item.Id">
                        <button class="btn-danger btn">Remove user</button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>