<style>
    @@keyframes tonext {
        75% {
            left: 0;
        }

        95% {
            left: 100%;
        }

        98% {
            left: 100%;
        }

        99% {
            left: 0;
        }
    }

    @@keyframes tostart {
        75% {
            left: 0;
        }

        95% {
            left: -300%;
        }

        98% {
            left: -300%;
        }

        99% {
            left: 0;
        }
    }

    @@keyframes snap {
        96% {
            scroll-snap-align: center;
        }

        97% {
            scroll-snap-align: none;
        }

        99% {
            scroll-snap-align: none;
        }

        100% {
            scroll-snap-align: center;
        }
    }

    * {
        scrollbar-color: grey; /* thumb and track color */
        scrollbar-width: 2px;
    }

        *::-webkit-scrollbar {
            width: 2px;
        }

        *::-webkit-scrollbar-track {
            /*background: transparent;*/
            background: white;
        }

        *::-webkit-scrollbar-thumb {
            /*background: transparent;*/
            border: none;
        }

    ol, li {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .carousel {
        position: relative;
        padding-top: 52%;
        filter: drop-shadow(0 0 10px #0003);
        perspective: 100px;
    }

    .carousel__viewport {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        display: flex;
        overflow-x: scroll;
        counter-reset: item;
        scroll-behavior: smooth;
        scroll-snap-type: x mandatory;
    }

    .carousel__slide {
        position: relative;
        flex: 0 0 100%;
        counter-increment: item;
    }

        .carousel__slide:nth-child(even) {
        }

    #carousel__slide1 {
        background-image: url(https://www.loveyourclothes.org.uk/sites/default/files/styles/responsive/public/lyc-campaigns-website-header-1600.jpg?itok=DLdKu9UI);
    }

    #carousel__slide2 {
        background-image: url(https://media.vogue.co.uk/photos/5f3e765c3771316bf98bbf1d/master/pass/BagCollage.jpg);
    }

    #carousel__slide3 {
        background-image: url(https://ngo-shoes.com/img/rocketmegamenu/nouveaute-6220cf71557a0.jpg);
    }

    #carousel__slide4 {
        background-image: url(https://wallpaperaccess.com/full/4571409.jpg);
    }

    .carousel__slide:before {
        content: counter(item);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate3d(-50%,-40%,70px);
        color: #fff;
        font-size: 2em;
    }

    .carousel__snapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        scroll-snap-align: center;
    }

    @@media (hover: hover) {
        .carousel__snapper {
            animation-name: tonext, snap;
            animation-timing-function: ease;
            animation-duration: 4s;
            animation-iteration-count: infinite;
        }

        .carousel__slide:last-child .carousel__snapper {
            animation-name: tostart, snap;
        }
    }

    .carousel__navigation {
        position: absolute;
        right: 0;
        bottom: 0;
        left: 0;
        text-align: center;
    }

    .carousel::before,
    .carousel::after,
    .carousel__prev,
    .carousel__next {
        position: absolute;
        top: 0;
        width: 4rem;
        height: 4rem;
        transform: translateY(-50%);
        border-radius: 50%;
        font-size: 0;
        outline: 0;
    }

    .carousel::before,
    .carousel__prev {
        left: -1rem;
    }

    .carousel::after,
    .carousel__next {
        right: -1rem;
    }

    .btn-home {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        background-color: #555;
        color: white;
        font-size: 16px;
        padding: 12px 24px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
    }

        .btn-home:hover {
            background-color: #007bff;
        }


        #blackTxt{
            color: black;
            font-size: 50px;
            font-family:Times New Roman sans-serif;
        }

        #whiteTxt{
            color: white;
            font-size: 50px;
            -webkit-text-stroke: 1px black;
        }

</style>


